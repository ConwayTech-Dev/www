---
import { ArrowLeft } from "lucide-astro";
import { getLocale, getUI } from "~/utils/i18n";

const locale = getLocale(Astro);

const {
	routes: {
		mods: { slug },
	},
} = getUI(locale);
---

<button
  onclick="window.history.back()"
  class="mb-8 flex w-min items-center gap-2"
>
  <ArrowLeft class="size-4" />
  {slug.back}
</button>
